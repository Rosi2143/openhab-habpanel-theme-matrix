{
    "template": "\n<div class=\"section\" ng-init=\"hueColors = [ { hsb: '0,0,100', hex: '#fff' }, { hsb: '74,78,100', hex: '#fecc2f' }, { hsb: '46,100,100', hex: '#f9a228' }, { hsb: '26,100,100', hex: '#f6621f' }, { hsb: '0,100,100', hex: '#db3838' }, { hsb: '273,100,100', hex: '#a363d9' }, { hsb: '201,100,100', hex: '#40a4d8' }, { hsb: '177,100,100', hex: '#33beb8' }, { hsb: '140,100,100', hex: '#b2c225' } ]\">\n  <div ng-repeat=\"group in itemsInGroup('fgHABPanelWidgetItems_Thermostat') | orderBy:'name':'reverse'\">\n\n    <div class=\"sectionIcon off\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/squidink.svg#thermometer-3\"></use></svg></div>\n    <div class=\"title\">\n      <div class=\"name\">{{group.label}}</div>\n      <div class=\"summary\">ON: {{ ( filtered | filter: { state: 'ON' } ).length }} of {{filtered.length}}</div>\n    </div>\n    <div class=\"controls\">\n\t\n      <div ng-repeat=\"item in itemsInGroup(group.name) | orderBy:'label' | filter:query as filtered\">\n\n        <div class=\"widget wide\">\n          <div class=\"leftborder\"></div>\n          <div class=\"leftborder-label\">{{item.label}}</div>\n          <span class=\"value\" style=\"display: inline\">{{itemValue(item.name + '_TempAct') | number:1}}°C / {{itemValue(item.name + '_TempSet') | number:1}}°C</span>\n          <div class=\"icon on\"  ng-if=\"(itemValue(item.name + '_TempSet') | number:1 )!='4,5'\" ng-click=\"sendCmd(item.name + '_TempSet', '0')\"  style=\"display: inline;\" ><svg viewbox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/squidink.svg#thermometer-3\"></use></svg></div>\n          <div class=\"icon off\" ng-if=\"(itemValue(item.name + '_TempSet') | number:1 )=='4,5'\" ng-click=\"sendCmd(item.name + '_TempSet', '21')\" style=\"display: inline;\" ><svg viewbox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/squidink.svg#thermometer-1\"></use></svg></div>\n          <div class=\"controlGroup\">\n            <div class=\"control\"                                                             ng-click=\"sendCmd(item.name + '_TempSet', (itemValue(item.name + '_TempSet') | number:0) + 1)\"><svg viewBox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#top-arrow-2\"> </use></svg></div>\n            <div class=\"control on\"  ng-if=\"(itemValue(item.name + '_WindowState')=='OPEN')\" ng-click=\"sendCmd(item.name + '_WindowState', 'CLOSE')\">                                       <svg viewbox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#window\">      </use></svg></div>\n            <div class=\"control off\" ng-if=\"(itemValue(item.name + '_WindowState')!='OPEN')\" ng-click=\"sendCmd(item.name + '_WindowState', 'OPEN')\" >                                       <svg viewbox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#window\">      </use></svg></div>\n            <div class=\"control\"                                                             ng-click=\"sendCmd(item.name + '_TempSet', (itemValue(item.name + '_TempSet') | number:0) + 1)\"><svg viewBox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#down-arrow-2\"></use></svg></div>\n            <div class=\"control on\"  ng-if=\"(itemValue(item.name + '_BatteryStatus')=='ON')\" ng-click=\"sendCmd(item.name + '_BatteryStatus', 'OFF'\")>                                       <svg viewbox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#battery\">      </use></svg></div>\n          </div>\n\n          <div class=\"widget wide\" ng-if=false>\n            <div class=\"icon off\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/squidink.svg#thermometer-3\"></use></svg></div>\n            <div class=\"name\">Thermostat<div class=\"value\">27.2 &#176C</div></div>\n            <div class=\"controlGroup\">\n              <div class=\"control\">22</div>\n              <div class=\"control\">24</div>\n              <div class=\"control\">26</div>\n              <div class=\"control\">28</div>\n            </div>\n          </div>\n        </div>\n        <!-- {{item.label}} -- {{item.type}} -- {{item.state}} -- {{itemValue((item.name + '_TempSet') | number:1) }} -->\n      </div>\n\n    </div>\n\t</div>\n</div>"
}