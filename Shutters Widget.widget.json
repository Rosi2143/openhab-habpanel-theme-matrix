{
    "template": "\n<div class=\"section\" ng-init=\"hueColors = [ { hsb: '0,0,100', hex: '#fff' }, { hsb: '74,78,100', hex: '#fecc2f' }, { hsb: '46,100,100', hex: '#f9a228' }, { hsb: '26,100,100', hex: '#f6621f' }, { hsb: '0,100,100', hex: '#db3838' }, { hsb: '273,100,100', hex: '#a363d9' }, { hsb: '201,100,100', hex: '#40a4d8' }, { hsb: '177,100,100', hex: '#33beb8' }, { hsb: '140,100,100', hex: '#b2c225' } ]\">\n  <div ng-repeat=\"group in itemsInGroup('fgHABPanelWidgetItems_Shutter') | orderBy:'name':'reverse'\">\n\n    <div class=\"sectionIconContainer\" ng-if=\"itemValue(group.name)=='0'\" ng-click=\"sendCmd(group.name, 'UP')\">\n      <div class=\"sectionIcon off\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/matrixicons.svg#light_bulb\"></use></svg></div>\n    </div>\n    <div class=\"sectionIconContainer\" ng-if=\"itemValue(group.name)=='NULL'\" ng-click=\"sendCmd(group.name, 'UP')\">\n      <div class=\"sectionIcon warn\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/matrixicons.svg#light_bulb\"></use></svg></div>\n    </div>\n    <div class=\"sectionIconContainer\" ng-if=\"itemValue(group.name)!='0'\" ng-click=\"sendCmd(group.name, 'DOWN')\">\n      <div class=\"sectionIcon on\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/matrixicons.svg#light_bulb\"></use></svg></div>\n    </div>\n    <div class=\"title\">\n      <div class=\"name\">{{group.label}}</div>\n      <div class=\"summary\">ON: {{ ( filtered | filter: { state: 'ON' } ).length }} of {{filtered.length}}</div>\n    </div>\n    <div class=\"controls\">\n\t\n      <div ng-repeat=\"item in itemsInGroup(group.name) | orderBy:'name' | filter:query as filtered\">\n\n      <div class=\"widget wide\">\n        <div class=\"icon off\"><svg viewBox=\"0 0 48 48\"><use xlink:href=\"/static/matrix-theme/squidink.svg#window\"></use></svg></div>\n        <div class=\"value\">{{item.label}} : {{itemValue(item.name)}}</div>\n        <div class=\"controlGroup\">\n          <div class=\"control\" ng-click=\"sendCmd(item.name, 'UP')\">  <svg viewBox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#top-arrow-2\"> </use></svg></div>\n          <div class=\"control\" ng-click=\"sendCmd(item.name, 'STOP')\"><svg viewBox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#stop_1_\">     </use></svg></div>\n          <div class=\"control\" ng-click=\"sendCmd(item.name, 'DOWN')\"><svg viewBox=\"0 0 80 80\"><use xlink:href=\"/static/matrix-theme/squidink.svg#down-arrow-2\"></use></svg></div>\n        </div>\n      </div>\n        <!-- {{item.label}} -- {{item.type}} -- {{item.state}} -- {{itemValue(item.name)}} -->\n      </div>\n\n    </div>\n\t</div>\n</div>"
}